{
  "name": "Wikipedia Donation Remover",
  "version": "1.3",
  "description": "Replaces the Wikipedia donation banner with a simple message.",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "wikipedia-donation-remover@example.com",
      "data_collection_permissions": {
        "permissions": [],
        "consent_notice": "This extension does not collect or transmit data.",
        "required": false
      }
    }
  },
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://web.archive.org/web/*/https://*.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/*",
        "https://web.archive.org/web/*/https://*.wikipedia.org/*"
      ],
      "js": ["wdd_wikipedia.js"],
      "all_frames": true
    }
  ]
}
